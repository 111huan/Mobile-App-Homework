<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical"
    ohos:padding="0vp">

    <DependentLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="blue"
        ohos:margin="0vp"
        ohos:padding="5vp">
        <Text
            ohos:id="$+id:title"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:align_parent_top="true"
            ohos:padding="5vp"
            ohos:text="课程详情"
            ohos:text_alignment="center"
            ohos:text_color="white"
            ohos:text_size="50"/>
        <Button
            ohos:id="$+id:back"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:align_parent_left="true"
            ohos:align_parent_top="true"
            ohos:background_element="purple"
            ohos:padding="5vp"
            ohos:text="返回"
            ohos:text_alignment="center"
            ohos:text_color="white"
            ohos:text_size="50"/>
    </DependentLayout>
    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="green"
        ohos:margin="10vp">
        <Text
            ohos:id="$+id:cs1_t1"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:align_parent_top="true"
            ohos:padding="5vp"
            ohos:text="课程名称：C语言程序设计"
            ohos:multiple_lines="true"
            ohos:margin="10vp"
            ohos:text_color="black"
            ohos:text_size="65"/>
        <Text
            ohos:id="$+id:cs1_t2"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:align_parent_top="true"
            ohos:padding="5vp"
            ohos:text="上课时间：周三4-5节"
            ohos:multiple_lines="true"
            ohos:margin="10vp"
            ohos:text_color="black"
            ohos:text_size="65"/>
        <Text
            ohos:id="$+id:cs1_t3"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:align_parent_top="true"
            ohos:padding="5vp"
            ohos:text="课程简介：暂无"
            ohos:multiple_lines="true"
            ohos:margin="10vp"
            ohos:text_color="black"
            ohos:text_size="65"/>
        <Text
            ohos:id="$+id:cs1_t4"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:align_parent_top="true"
            ohos:padding="5vp"
            ohos:text="课开课教师：a老师（副教授）"
            ohos:multiple_lines="true"
            ohos:margin="10vp"
            ohos:text_color="black"
            ohos:text_size="65"/>
    </DirectionalLayout>

</DirectionalLayout>